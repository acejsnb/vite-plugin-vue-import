{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@": ["src/*"]
    },
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "sourceMap": false
  },
  "include": ["./src"]
}
